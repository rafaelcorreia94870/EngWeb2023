extends layout

block content
  .w3-light-grey 
    .header.w3-padding-16.w3-card 
      .w3-margin 
        h1 Introduza os dados 
      .container 
        form.w3-container(method="POST")
          fieldset
            legend Tarefa
            div(style="display: flex;")
              label.w3-padding Nome 
              input.w3-input.w3-round(type="text" name="nome")
              label.w3-padding Data Limite 
              input.w3-input.w3-round(type="text" name="data")
              label.w3-padding Quem a Faz 
              input.w3-input.w3-round(type="text" name="pessoa")
            label Descrição 
            input.w3-input.w3-round(type="text" name="des")
          .w3-padding-small.w3-right.w3-left-margin 
            button.w3-btn.w3-teal.w3-mb-2.w3-round-large(type="submit") Submit
    .w3-row-padding.w3-padding.w3-card-4(name="content")
      .w3-half.w3-center.w3-card.w3-row-padding(name="to-do")
        h1 TAREFAS A REALIZAR 
        table.w3-table-all
          tr 
            td Nome
            td Até
            td Quem
            td Info
          
          form.w3-container(method="POST")
            fieldset
              tr 
                td

