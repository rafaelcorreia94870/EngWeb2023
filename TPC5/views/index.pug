extends layout

block content
  .w3-light-grey 
    .header.w3-padding-16.w3-card 
      .w3-margin 
        h1 Introduza os dados 
      .container 
        form.w3-container(method="POST")
          fieldset
            legend Tarefa
            div(style="display: flex;")
              label.w3-padding Nome 
              input.w3-input.w3-round(type="text" name="nome")
              label.w3-padding Data Limite 
              input.w3-input.w3-round(type="text" name="data")
              label.w3-padding Quem a Faz 
              input.w3-input.w3-round(type="text" name="pessoa")
            label Descrição 
            input.w3-input.w3-round(type="text" name="des")
          .w3-padding-small.w3-right.w3-left-margin 
            button.w3-btn.w3-teal.w3-mb-2.w3-round-large(type="submit") Submit
    .w3-row-padding.w3-padding.w3-card-4(name="content")
      .w3-half.w3-center.w3-card.w3-row-padding(name="to-do")
        h1 TAREFAS A REALIZAR 
        table.w3-table-all
          tr 
            td Nome
            td Até
            td Quem
            td Info
          each task in toDo
            if(editId==task.id)
              form.w3-container(method="POST")
                tr 
                  td.editable
                    input(maxlength="10" value=task.nome size="12%" name="nome" type="text" contenteditable="true")
                  td.editable
                    input(value=task.data size="12%" name="data" type="text" contenteditable="true")
                  td.editable
                    input(value=task.pessoa size="12%" name="pessoa" type="text" contenteditable="true")
                  td.editable
                    input(value=task.des size="12%" name="des" type="text" contenteditable="true")
                  td 
                    .w3-padding-small.w3-right.w3-left-margin 
                      button.w3-btn.w3-teal.w3-mb-2.w3-round-large.w3-mar(type="submit") Save 
                    .w3-padding-small.w3-right.w3-left-margin 
                      button.w3-btn.w3-teal.w3-mb-2.w3-round-large(type="submit")
                        a(style="text-decoration:none;" href="/done/"+task.id) Done
            else 
              form.w3-container(method="POST")
                tr 
                  td.editable(contenteditable="false")
                    input(maxlength="10" value=task.nome size="12%" name="nome" type="text" contenteditable="false")
                  td.editable(contenteditable="false")
                    input(value=task.data size="12%" name="data" type="text" contenteditable="false")
                  td.editable(contenteditable="false")
                    input(value=task.pessoa size="12%" name="pessoa" type="text" contenteditable="false")
                  td.editable(contenteditable="false")
                    input(value=task.des size="12%" name="des" type="text" contenteditable="false")
                  td 
                    .w3-padding-small.w3-right.w3-left-margin 
                      button.w3-btn.w3-teal.w3-mb-2.w3-round-large.w3-mar(type="button")
                        a(style="text-decoration:none;" href="/edit/"+task.id) Edit 
                    .w3-padding-small.w3-right.w3-left-margin 
                      button.w3-btn.w3-teal.w3-mb-2.w3-round-large(type="submit")
                        a(style="text-decoration:none;" href="/done/"+task.id) Done

      .w3-half.w3-center.w3-card.w3-row-padding(name="done")
        h1 TAREFAS A REALIZAR 
        table.w3-table-all  
          tr 
            td Nome
            td Até
            td Quem
            td Info
          each task in done
            tr
              td=task.nome 
              td=task.data 
              td=task.pessoa 
              td=task.des
